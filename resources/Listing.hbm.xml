<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entity.Listing" table="listing">
        <meta attribute="class-description">
            This class contains book detail.
        </meta>
        <id name="listingId" type="int" column="listingId">
            <generator class="native"/>
        </id>
        <property name="instructorFirstName" column="instructorFirstName" type="string"/>
        <property name="instructorLastName" column="instructorLastName" type="string"/>
        <property name="course" column="course" type="string"/>
        <property name="bookTitle" column="bookTitle" type="string"/>
        <property name="bookAuthor" column="bookAuthor" type="string"/>
        <property name="isbn" column="isbn" type="string"/>
        <property name="userName" column="userName" type="string"/>
        <property name="price" column="price" type="string"/>

    </class>
</hibernate-mapping>