<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entity.Message" table="Message">
        <meta attribute="class-description">
            This class contains book detail.
        </meta>
        <id name="messageId" type="int" column="messageId">
            <generator class="native"/>
        </id>
        <property name="userName" column="userName" type="string"/>
        <property name="userMessage" column="userMessage" type="string"/>
        <property name="contactId" column="contactId" type="string"/>

    </class>
</hibernate-mapping>